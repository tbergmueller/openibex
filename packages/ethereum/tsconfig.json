{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "types": ["node", "jest"],
    "noImplicitAny": false,         // Allows 'any' type implicitly
    "strictPropertyInitialization": false, // Turns off checks for class property initialization
    "noImplicitThis": false,        // Allows 'this' type to be implicitly 'any'
    "strictNullChecks": false,      // Disables null and undefined checks
    "suppressImplicitAnyIndexErrors": true, // Suppresses errors when accessing properties that TypeScript can't infer
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "declaration": true,
    "outDir": "./dist",
    "incremental": false, // TODO true may be better?
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["**/dist/*"]
}